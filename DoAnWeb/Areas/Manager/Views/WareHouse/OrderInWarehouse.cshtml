<div class="row">
    <div class="col-12">
        <div class="card-body">
            <table class="table table-bordered" id="tripTable">
                <thead>
                    <tr>
                        <th>Mã đơn hàng</th>
                        <th>Ngày tạo</th>
                        <th>Tên mặt hàng</th>
                        <th>Tên người gửi</th>
                        <th>Tên người nhận</th>
                        <th>Thu hộ</th>
                        <th>Trạng thái</th>
                        <th>Kho hang id</th>
                    </tr>
                </thead>

                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr data-widget="expandable-table" aria-expanded="false">
                                <td>@item.ItemCode</td>
                                <td>@item.CreatedDate</td>
                                <td>@item.ItemName</td>
                                <td>@item.SenderName</td>
                                <td>@item.ReceiverName</td>
                                <td>@item.PaymentMethodCod VNĐ</td>
                                <td>
                                    <style>
                                        .text-custom-blue {
                                            color: blue;
                                        }
                                    </style>
                                    @if (item.IsActive == "Chờ lấy hàng")
                                    {
                                        <i class="fas fa-circle text-danger"></i>

                                    }
                                    else if (item.IsActive == "Đã nhập kho")
                                    {
                                        <i class="fas fa-circle text-warning"></i>
                                    }
                                    else if (item.IsActive == "Đang vận chuyển")
                                    {
                                        <i class="fas fa-circle text-custom-blue"></i>
                                    }
                                    else if (item.IsActive == "Đã giao thành công")
                                    {
                                        <i class="fas fa-circle text-success"></i>
                                    }
                                    @item.IsActive
                                </td>
                                <td>@item.w_id</td>
                            </tr>
                        }
                    }
            </table>

            <div class="row">
                <div class="col-6"></div>
                <div class="col-6" style="text-align:right;">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>

        </div>
    </div>
</div>



