@model PagedList.PagedList<DoAnWeb.Models.tb_Order>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Beingshipped";
    Layout = "~/Areas/Driver/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/driver" class="nav-link">Trang chủ</a>
        </li>
    </ul>
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý đơn hàng</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Danh mục</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Ngày tạo</th>
                        <th>Tên mặt hàng</th>
                        <th>Tên người gửi</th>
                        <th>Tên người nhận</th>
                        <th>Thu hộ</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        var i = 1;
                        foreach (var item in Model)
                        {
                            if (item.IsActive == "Đang vận chuyển")
                            {
                                <tr id="trow_@item.Id">
                                    <td>@i</td>

                                    <td>@item.ItemCode</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ItemName</td>
                                    <td>@item.SenderName</td>
                                    <td>@item.ReceiverName</td>
                                    <td>@item.PaymentMethodCod VNĐ</td>
                                    <td>@item.IsActive</td>

                                    <td>
                                        <a href="/driver/quanlydonhang/approveorder/@item.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                    }

                </tbody>
            </table>

            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>